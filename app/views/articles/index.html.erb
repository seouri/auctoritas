<h1>Articles</h1>

<ul class="articles">
<% for article in @articles -%>
  <li><div class="title"><%= link_to article.title, article %></div><%= citation(article) %></li>
<% end -%>
</ul>

<div class="pagination">
<%= will_paginate @articles %>
</div>

<%= link_to "Add an article", new_article_path %>
